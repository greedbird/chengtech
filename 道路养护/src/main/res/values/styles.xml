<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->

    </style>

    <style name="AppCompatAppThemeNoTitle" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/light_sky_blue2</item>
        <item name="colorPrimaryDark">@color/light_sky_blue2</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppCompatAppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/title_background_color</item>
        <item name="colorPrimaryDark">@color/title_background_color</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowActionBar">false</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="colorPrimary">@color/title_background_color</item>
        <item name="colorPrimaryDark">@color/title_background_color</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- 该app主题 -->
    <style name="diy_holo_light_no_title" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/light_sky_blue2</item>
        <item name="colorPrimaryDark">@color/light_sky_blue2</item>
        <item name="colorAccent">@color/title_background_color</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/shape_nodeal_progressdialog</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="myDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="PopupAnimation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_anim</item>
        <item name="android:windowExitAnimation">@anim/popup_anim_exit</item>
    </style>

    <style name="PopupAnimationVertical" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_anim_in_vertical</item>
        <item name="android:windowExitAnimation">@anim/popup_anim_out_vertical</item>
    </style>

    <style name="SubMenuDialog" parent="@style/AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="TabLayoutStyle">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="AppCompatAppThemeNoTitle.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppCompatAppThemeNoTitle.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="spinner_style">
        <item name="android:background">@drawable/spinner_down2</item>
        <item name="android:padding">5dp</item>
    </style>

    <!-- 地图activity样式-->
    <style name="PanelSingleLineTextview">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:ellipsize">end</item>
    </style>
    <!-- 地图activity样式-->
    <style parent="PanelSingleLineTextview" name="PanelTitleText">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:background">@drawable/header_bar</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
