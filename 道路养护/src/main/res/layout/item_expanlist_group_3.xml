<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/group_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/noticedetail_title_shape"
        android:text="浏览记录"
        android:textColor="#4A708B"
        android:textSize="@dimen/noticedetail_title_1_text_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="2dp"
        android:layout_toLeftOf="@id/noticedetail_title_2"
        android:background="#708090" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="16dp"
        android:layout_toRightOf="@id/noticedetail_title_2"
        android:background="#708090" />

</RelativeLayout>