<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="3dp"
    android:foreground="?android:attr/selectableItemBackgroundBorderless"
    app:cardBackgroundColor="#7d9ff1"
    app:cardCornerRadius="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="我是一条主标题，主标题要很长的，一直长常常。"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/title"
                android:layout_below="@+id/title"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="总实施里程:61.2"
                android:textColor="#88000000"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/thirdtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/subtitle"
                android:layout_below="@+id/title"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/subtitle"
                android:text="总预算资金(万元):123123"
                android:textColor="#88000000"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/fourtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/title"
                android:layout_below="@+id/subtitle"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="总批复预算金额(万元):123123"
                android:textColor="#88000000"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/fivetitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/fourtitle"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/fourtitle"
                android:text="总支付资金(万元):123123"
                android:textColor="#88000000"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/sixtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/title"
                android:layout_below="@+id/fourtitle"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="未支付金额(万元):1231"
                android:textColor="#88000000"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/seventitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/title"
                android:layout_below="@+id/sixtitle"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="总路面工程数量:1231"
                android:textColor="#88000000"
                android:textSize="12sp"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/hideLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="beforeDescendants"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/down_arraow"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:src="@mipmap/down_arrow"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>